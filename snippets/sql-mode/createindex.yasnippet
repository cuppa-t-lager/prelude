# -*- mode: snippet -*-
# name: Create index on table
# key: sqlci
# --
-----------------------------------------------------------------------------------------------------
-------------------------------- create index on table $1 column $2 ---------------------------------
-----------------------------------------------------------------------------------------------------
IF (NOT EXISTS
	(
		SELECT name FROM sys.indexes
		WHERE name = 'IX_$1_$2'
	)
)
BEGIN
	CREATE NONCLUSTERED INDEX IX_$1_$2
	ON $1 ($2);
END

GO

$0